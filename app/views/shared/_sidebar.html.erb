<div class="user_info">
  <h2>User Info</h2>
    <%= image_tag user.get_profile_image(100,100) %>  <!--ﾕｰｻﾞｰの画像-->
    <table class="table">
      <tbody><tr></tr>
      <tr>
    	  <th>name</th>
    	  <th><%= user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction %></th>
      </tr>
      </tbody>
    </table>

        <%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block" do %>
        <i class="fas fa-user-cog"></i>
        <% end %>

</div>

<div class="new_book">
  <h2>New book</h2>
    <% if book.errors.any? %>
    <div class="alert alert-warning">
    <%= book.errors.count %> errors prohibited this book from being saved:
      <ul>
        <% book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
    <%= form_with model: book do |f| %>
      <div>
        <label for="inputTitle">Titel</label><br>
          <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
      </div>
      <div>
        <label for="inputOpinion">Opinion</label><br>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Books', class: "btn btn-success"%>
      </div>
    <% end %>
</div>
