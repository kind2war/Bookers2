<div class= "container px-5 px-sm-0">
<div class = "row w-100">
  <!--ｻｲﾄﾞﾊﾞｰ-->
  <!--user_controllerで定義があるので、sidebarのUserInfoは上手く機能している。-->
  <%= render partial: 'shared/sidebar', locals: { user: @user } %>
  <%#= render partial: 'shared/new_book', locals: { books : @books } %>


  <!--メインコンテンツ-->
  <div class="col-md-8 offset-1 px-sm-15">
  <div class="user_books">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th class="w-10 p-1"></th>
          <th class="w-20 p-1">Title</th>
          <th class="w-70 p-1">Opinion</th>
          <th colspan="2"></th>
          <% if @user.id == current_user.id %>
            <th></th>
            <th></th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td>#ﾕｰｻﾞｰの画像</td>
          <td>#本のタイトル<%= link_to book.title, book_path(book.id) %></td>
          <td>#本の説明<%= book.opinion %></td>
          <% if @user.id == current_user.id %>
          <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
          <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          <% end %>
        </tr>
        <% end %>
    </tbody>
  </table>
  </div>
  </div>
</div>
</div>