<div class= "container px-5 px-sm-0">
  <div class = "row w-100">
    <!--ｻｲﾄﾞﾊﾞｰ-->
  <div class = "col-md-3">
    <!--user_controllerで定義があるので、sidebarのUserInfoは上手く機能している。-->
      <%= render partial: 'shared/sidebar', locals: { user: @user, book: @book, books: @books } %>
    <!--がしかし、NewBookが上手く実装できずに、手ごわい。-->
      <%#= render partial: 'shared/new_book', locals: { book: @book, books: @books} %>
  </div>

    <!--メインコンテンツ-->
    <div class="col-md-9"> <!--col-md-8 offset-1 px-sm-15-->
    <div class="user_books">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="w-10 p-1"></th>
            <th class="w-20 p-1">Title</th>
            <th class="w-70 p-1">Opinion</th>
            <th colspan="2"></th>
            <% if @user.id == current_user.id %>
              <th></th>
              <th></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.opinion %></td>
            <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
            <% end %>
          </tr>
          <% end %>
            <%= paginate @books %>
      </tbody>
    </table>
    </div>
    </div>
  </div>
</div>