<table>
  <thead>
    <tr>
      <th width="360px">Title</th>
      <th width="360px">Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.opinion%></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
