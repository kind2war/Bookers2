<div class= "container px-5 px-sm-0">
<div class = "row w-100">
  <!--ｻｲﾄﾞﾊﾞｰ-->
  <div class = "col-md-3">
    <%= render partial: 'shared/sidebar', locals: { user: @user, book: @book, books: @books } %>
    <%#= render partial: 'shared/new_book', locals: { books : @books } %>
  </div>

  <!--メインコンテンツ-->
  <div class="col-md-9"> <!--col-md-8 offset-1 px-sm-15-->
    <div class="user_index">
    <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th class="w-25 p-3">image</th>
            <th class="w-75 p-3">name</th>
            <th></th>
            <!--th colspan="3"></th -->
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100)  %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
          <% end %>
          <%= paginate @users %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>