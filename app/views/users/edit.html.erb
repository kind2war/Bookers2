<h2>User info</h2>
  <div class="user_edit">
    <% if @user.errors.any? %>
      <div class="alert alert-warning">
      <%= @user.errors.count %> errors prohibited this book from being saved:
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @user, method: :patch do |f| %>
      <div>
      <label for="inputName">Name</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div>
      <label for = "inputImage">Image</label><br>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像",accept:"image/*" %>
      </div>
      <label for ="inputIntro">introduction</label><br>
      <%= f.text_area :introduction, placeholder:"紹介" %><br>
      <%= f.submit "Update User" %>
    <% end %>
  </div>