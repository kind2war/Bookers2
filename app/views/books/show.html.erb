<!--フラッシュの表示-->
<% flash.each do |key, value| %>
  <div class="flash"<%= key %>>
    <%= value %>
<% end %>

<div class= "container px-5 px-sm-0">
<div class = "row">
  <!--ｻｲﾄﾞﾊﾞｰ-->
  <%= render "shared/sidebar" %>

  <!--メインコンテンツ-->
  <div class="col-md-8 offset-1 px-sm-15">
  <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th width="20%"></th>
          <th width="30%">Title</th>
          <th width="50%">Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%#= image_tag @user.get_profile_image(100,100) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.opinion %></td>
        </tr>
      </tbody>
    </table>
  </div>


  <span>
    <%= link_to 'Edit', edit_book_path(@book.id) %> &nbsp;|
    <%= link_to 'Back', '/books'%>
  </span>