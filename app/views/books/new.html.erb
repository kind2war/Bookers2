<h2>New Book</h2>
  <div class="create">
    <%= form_with model: @book do |f| %>
    <div>
      <%= f.label :Title %><br>
      <%= f.text_field :title, autofocus:true, placeholder:"本のタイトル"  %>
    </div>
    <div>
      <%= f.label :Opinion %><br>
      <%= f.text_area :opinion, placeholder:"感想など" %></br>
    </div>
      <%= f.submit 'Create Books'%>
    <% end %>
  </div>