<body>
<h2>Editing Book</h2>
  <div class="edit">
		<% if @book.errors.any? %>
  		<%= @book.errors.count %> errors prohibited this book from being saved:
		    <ul>
		      <% @book.errors.full_messages.each do |message| %>
		      <li><%= message %></li>
		      <% end %>
		    </ul>
		<% end %>

    <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
    <div>
      <%= f.label :Title %><br>
      <%= f.text_field :title  %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %></br>
    </div>
      <%= f.submit 'Update Book'%>
  </div>
    <% end %>
</body>