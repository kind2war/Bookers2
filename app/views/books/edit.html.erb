<h2>Editing Book</h2>
  <div class="book_edit">
		<% if @book.errors.any? %>
		  <div class="alert alert-warning">
  		<%= @book.errors.count %> errors prohibited this book from being saved:
		    <ul>
		      <% @book.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		      <% end %>
		    </ul>
		  </div>
		<% end %>

    <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
      <div>
        <label for="inputTitle">Titel</label><br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"  %>
      </div>
      <div>
        <label for="inputOpinion">Opinion</label><br>
        <%= f.text_area :body, placeholder:"感想" %><br>
        <%= f.submit 'Update Book'%>
      </div>
    <% end %>

    <%= link_to 'Show', @book %>|
    <%= link_to 'Back', books_path %>
  </div>