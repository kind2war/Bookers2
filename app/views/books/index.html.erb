<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th width="360px">Title</th>
      <th width="360px">Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.opinion %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
      <% end %>
  </tbody>
</table>

<h2>New Books</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end%>
    </ul>
<% end %>

<%= form_with model: @book do |f| %> <!--|f|はブロック変数-->
  <span>Title</span></br>
    <%= f.text_field :title  %></br>
  <span>opinion</span></br>
    <%= f.text_area :opinion  %></br>
    <%= f.submit 'Create Books'%>
<% end %>