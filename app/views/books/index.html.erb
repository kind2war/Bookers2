<body>
<div class= "container px-5 px-sm-0">
<div class = "row w-100">

  <!--ｻｲﾄﾞﾊﾞｰ-->
  <div class = "col-md-3">
    <%= render partial: 'shared/sidebar', locals: { user: @user, book: @book, books: @books } %>
  </div>

  <!--メインコンテンツ-->
  <div class="col-md-9"> <!--col-md-8 offset-1 px-sm-15-->
  <div class="user_books">
  <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th width="10%"></th>
          <th width="20%">Title</th>
          <th width="60%">Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <td><%= image_tag book.user.get_profile_image(80,80) %><br>
              <%= link_to book.user.name, user_path(book.user.id) %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body%></td>
          <% if book.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          <% else %>
            <td colspan="2"></td>
          <% end %>
          <td><%= book.created_at %></td>
      </tr>
        <% end %>
        <%= paginate @books %>
    </tbody>
    </table>
</body>
