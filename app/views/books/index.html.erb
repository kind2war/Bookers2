<h1>IndexページのBooks</h1>
<p>books/index.html.erb</p>


<table>
  <thead>
    <tr>
      <th width="360px">Title</th>
      <th width="360px">Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
      <td><%= book.title %></td>
      <td><%= book.opinion%></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
      <% end %>
  </tbody>
</table>