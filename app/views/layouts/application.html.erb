<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<!--ここからBootsstrap-->
  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <button class="btn nav-link" >
                  <i class="fas fa-home" style="color: #ffffff;"></i>
                  <%= link_to 'Home', user_path(current_user.id), class: 'text-white' %>
                </button>

                <button class="btn" class: 'nav-link'>
                  <i class="fas fa-users" style="color: #fff;"></i>
                  <%= link_to 'Users', users_path, class: 'text-white' %>
                </button>

                <button class="btn" class: 'nav-link'>
                  <i class="fas fa-book" style="color: #fff;"></i>
                  <%= link_to 'Books', books_path, class: 'text-white' %>
                </button>

                <button class="btn" class: 'nav-link'>
                  <i class="fas fa-sign-out-alt" style="color: #fff;"></i>
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'text-white' %>
                </button>

                <% else %>

                <button class="btn nav-link" >
                  <i class="fas fa-home" style="color: #ffffff;"></i>
                  <%= link_to 'Home', '/', class: 'text-white' %>
                </button>

                <button class="btn nav-link" >
                  <i class="fas fa-link" style="color: #ffffff;"></i>
                  <%= link_to 'About', '/homes/about', class: 'text-white' %>
                </button>

                <button class="btn nav-link" >
                  <i class="fas fa-user-plus" style="color: #ffffff;"></i>
                  <%= link_to 'Sign up', new_user_registration_path, class: 'text-white' %>
                </button>

                <button class="btn nav-link" >
                  <i class="fas fa-sign-in-alt" style="color: #ffffff;"></i>
                  <%= link_to "Log in", new_user_session_path, class: 'text-white' %>
                </button>
                <% end %>
                </ul>
          </div>
        </div>
      </nav>
    </header>

    <% if flash[:notice] %>
     <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer class="pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
